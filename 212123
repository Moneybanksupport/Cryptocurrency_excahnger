    <script>
        // User Data
        let currentUser = null;
        let users = JSON.parse(localStorage.getItem('users')) || [];
        let transactions = JSON.parse(localStorage.getItem('transactions')) || [];
        let balance = 0;
        let pendingTransactions = JSON.parse(localStorage.getItem('pendingTransactions')) || [];
        
        // Crypto deposit addresses
        const cryptoAddresses = {
            trx: "TNPZfUwT7yFyX7XkFYZz1YQY1X1X1X1X1X1",
            solana: "7XkFYZz1YQY1X1X1X1X1X1X1X1X1X1X1X1X1X1",
            usdt: "0x7XkFYZz1YQY1X1X1X1X1X1X1X1X1X1X1X1"
        };

        // DOM Elements
        const authPages = document.getElementById('authPages');
        const bankingApp = document.getElementById('bankingApp');
        const loginPage = document.getElementById('loginPage');
        const registerPage = document.getElementById('registerPage');
        const loggedInUserSpan = document.getElementById('loggedInUser');
        const currentBalanceSpan = document.getElementById('currentBalance');
        const transactionHistoryTbody = document.getElementById('transactionHistory');
        const profileName = document.getElementById('profileName');
        const profileAccount = document.getElementById('profileAccount');
        const profileEmail = document.getElementById('profileEmail');
        const profilePhone = document.getElementById('profilePhone');
        const profileAddress = document.getElementById('profileAddress');
        const profileBalance = document.getElementById('profileBalance');
        const kycStatus = document.getElementById('kycStatus');
        const cryptoAddressDisplay = document.getElementById('cryptoAddressDisplay');
        const proofFileName = document.getElementById('proofFileName');

        // Form Elements
        const depositForm = document.getElementById('depositForm');
        const withdrawForm = document.getElementById('withdrawForm');
        const depositProofInput = document.getElementById('depositProof');

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            if(localStorage.getItem('currentUser')) {
                currentUser = JSON.parse(localStorage.getItem('currentUser'));
                showBankingApp();
                processPendingTransactions();
            }
            
            // Handle file upload display
            depositProofInput.addEventListener('change', function() {
                if(this.files.length > 0) {
                    proofFileName.textContent = this.files[0].name;
                } else {
                    proofFileName.textContent = 'No file selected';
                }
            });
        });

        // Process any pending transactions that might be complete
        function processPendingTransactions() {
            const now = new Date();
            const completedTransactions = [];
            
            pendingTransactions = pendingTransactions.filter(transaction => {
                if (transaction.userId !== currentUser.id) return true;
                
                const transactionDate = new Date(transaction.date);
                const hoursDiff = (now - transactionDate) / (1000 * 60 * 60);
                
                if (hoursDiff >= 24) {
                    // Transaction processing time complete
                    if (transaction.type === 'deposit') {
                        balance += transaction.amount;
                        currentUser.balance = balance;
                        addTransaction(`Deposit completed: ${transaction.crypto}`, transaction.amount, balance, 'completed');
                    } else if (transaction.type === 'withdraw') {
                        balance -= transaction.amount;
                        currentUser.balance = balance;
                        addTransaction(`Withdrawal completed to ${transaction.method}`, -transaction.amount, balance, 'completed');
                    }
                    completedTransactions.push(transaction);
                    return false;
                }
                return true;
            });
            
            if (completedTransactions.length > 0) {
                localStorage.setItem('pendingTransactions', JSON.stringify(pendingTransactions));
                updateUserData();
                updateBalance();
                updateTransactionHistory();
            }
        }

        // Auth Functions
        function showAuthPage(pageId) {
            loginPage.style.display = pageId === 'loginPage' ? 'block' : 'none';
            registerPage.style.display = pageId === 'registerPage' ? 'block' : 'none';
        }

        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            const user = users.find(u => u.email === email && u.password === password);
            
            if(user) {
                currentUser = user;
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                showBankingApp();
                processPendingTransactions();
            } else {
                alert('Invalid email or password');
            }
        }

        function register() {
            const kycVerified = document.getElementById('kycCheckbox').checked;
            
            if (!kycVerified) {
                alert('You must agree to complete KYC verification to register');
                return;
            }
            
            const newUser = {
                id: Date.now(),
                name: document.getElementById('regName').value,
                email: document.getElementById('regEmail').value,
                phone: document.getElementById('regPhone').value,
                address: document.getElementById('regAddress').value,
                password: document.getElementById('regPassword').value,
                balance: 0,
                kycVerified: false,
                accountNumber: 'CR' + Math.floor(100000000 + Math.random() * 900000000)
            };
            
            if(users.some(u => u.email === newUser.email)) {
                alert('Email already registered');
                return;
            }
            
            users.push(newUser);
            localStorage.setItem('users', JSON.stringify(users));
            
            currentUser = newUser;
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            addTransaction('Account Opening', 0, 0, 'completed');
            showBankingApp();
        }

        function showBankingApp() {
            authPages.style.display = 'none';
            bankingApp.style.display = 'block';
            loggedInUserSpan.textContent = currentUser.name;
            balance = currentUser.balance;
            updateBalance();
            updateProfile();
            updateTransactionHistory();
            showSection('dashboard');
        }

        // Crypto Selection Functions
        function selectCrypto(element, crypto) {
            document.querySelectorAll('.crypto-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            element.classList.add('selected');
            document.getElementById('selectedCrypto').value = crypto;
            
            // Show the appropriate deposit address
            cryptoAddressDisplay.textContent = cryptoAddresses[crypto];
            
            document.getElementById('depositAddressGroup').style.display = 'block';
            document.getElementById('depositAmountGroup').style.display = 'block';
            document.getElementById('depositProofGroup').style.display = 'block';
            document.getElementById('depositSubmitBtn').style.display = 'block';
        }

        function selectPaymentMethod(element, method) {
            document.querySelectorAll('.payment-method').forEach(opt => {
                opt.style.borderColor = '#ddd';
                opt.style.backgroundColor = 'transparent';
            });
            element.style.borderColor = 'var(--primary)';
            element.style.backgroundColor = 'rgba(0, 102, 51, 0.1)';
            document.getElementById('selectedPaymentMethod').value = method;
            document.getElementById('paymentDetailsGroup').style.display = 'block';
            document.getElementById('withdrawSubmitBtn').style.display = 'block';
        }

        // Form Submissions
        depositForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const crypto = document.getElementById('selectedCrypto').value;
            const amount = parseFloat(document.getElementById('depositAmount').value);
            const proofFile = depositProofInput.files[0];
            
            if(!crypto) {
                alert('Please select a cryptocurrency');
                return;
            }
            
            if(amount <= 0) {
                alert('Please enter a valid amount');
                return;
            }
            
            if(!proofFile) {
                alert('Please upload transaction proof');
                return;
            }
            
            // Add as pending transaction
            const transaction = {
                id: Date.now(),
                userId: currentUser.id,
                type: 'deposit',
                crypto: crypto.toUpperCase(),
                amount: amount,
                date: new Date().toISOString(),
                status: 'pending',
                proof: proofFile.name
            };
            
            pendingTransactions.push(transaction);
            localStorage.setItem('pendingTransactions', JSON.stringify(pendingTransactions));
            
            addTransaction(`Deposit initiated: ${crypto.toUpperCase()}`, 0, balance, 'pending');
            alert(`Deposit request received. Your ${amount} ${crypto.toUpperCase()} will be converted to PKR after 24 hours processing time.`);
            depositForm.reset();
            proofFileName.textContent = 'No file selected';
            document.querySelectorAll('.crypto-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            document.getElementById('depositAddressGroup').style.display = 'none';
            document.getElementById('depositAmountGroup').style.display = 'none';
            document.getElementById('depositProofGroup').style.display = 'none';
            document.getElementById('depositSubmitBtn').style.display = 'none';
            showSection('dashboard');
        });

        withdrawForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            const method = document.getElementById('selectedPaymentMethod').value;
            const accountDetails = document.getElementById('paymentDetails').value;
            const accountName = document.getElementById('accountName').value;
            
            if(amount < 100) {
                alert('Minimum withdrawal amount is 100 PKR');
                return;
            }
            
            if(!method) {
                alert('Please select a payment method');
                return;
            }
            
            if(!accountDetails) {
                alert('Please enter your account details');
                return;
            }
            
            if(!accountName) {
                alert('Please enter account holder name');
                return;
            }
            
            if(amount > balance) {
                alert('Insufficient balance');
                return;
            }
            
            // Add as pending transaction
            const transaction = {
                id: Date.now(),
                userId: currentUser.id,
                type: 'withdraw',
                method: method,
                amount: amount,
                accountDetails: accountDetails,
                accountName: accountName,
                date: new Date().toISOString(),
                status: 'pending'
            };
            
            pendingTransactions.push(transaction);
            localStorage.setItem('pendingTransactions', JSON.stringify(pendingTransactions));
            
            balance -= amount;
            currentUser.balance = balance;
            updateUserData();
            updateBalance();
            
            addTransaction(`Withdrawal initiated to ${method}`, -amount, balance, 'pending');
            alert(`Withdrawal request received. Your ${amount} PKR will be sent to your ${method} account after 24 hours processing time.`);
            withdrawForm.reset();
            document.querySelectorAll('.payment-method').forEach(opt => {
                opt.style.borderColor = '#ddd';
                opt.style.backgroundColor = 'transparent';
            });
            document.getElementById('paymentDetailsGroup').style.display = 'none';
            document.getElementById('withdrawSubmitBtn').style.display = 'none';
            showSection('dashboard');
        });

        // Helper Functions
        function showSection(sectionId) {
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            const navItems = document.querySelectorAll('.nav-item');
            for(let i = 0; i < navItems.length; i++) {
                if(navItems[i].getAttribute('onclick').includes(sectionId)) {
                    navItems[i].classList.add('active');
                    break;
                }
            }
        }

        function updateBalance() {
            currentBalanceSpan.textContent = balance.toFixed(2) + ' PKR';
            profileBalance.textContent = balance.toFixed(2) + ' PKR';
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
        }

        function updateProfile() {
            if(currentUser) {
                profileName.textContent = currentUser.name;
                profileAccount.textContent = 'Account No: ' + currentUser.accountNumber;
                profileEmail.textContent = currentUser.email;
                profilePhone.textContent = currentUser.phone;
                profileAddress.textContent = currentUser.address;
                profileBalance.textContent = currentUser.balance.toFixed(2) + ' PKR';
                kycStatus.textContent = currentUser.kycVerified ? 'Verified' : 'Not Verified';
                kycStatus.style.color = currentUser.kycVerified ? 'green' : 'red';
            }
        }

        function updateTransactionHistory() {
            transactionHistoryTbody.innerHTML = '';
            const userTransactions = transactions.filter(t => t.userId === currentUser.id);
            
            if(userTransactions.length === 0) {
                transactionHistoryTbody.innerHTML = '<tr><td colspan="5" style="text-align: center;">No transactions found</td></tr>';
                return;
            }
            
            // Sort by date (newest first)
            userTransactions.sort((a, b) => new Date(b.date) - new Date(a.date));
            
            userTransactions.forEach(transaction => {
                const row = document.createElement('tr');
                
                const dateCell = document.createElement('td');
                dateCell.textContent = new Date(transaction.date).toLocaleString();
                
                const typeCell = document.createElement('td');
                typeCell.textContent = transaction.description.includes('Deposit') ? 'Deposit' : 
                                      transaction.description.includes('Withdrawal') ? 'Withdrawal' : 
                                      'Other';
                
                const descCell = document.createElement('td');
                descCell.textContent = transaction.description;
                
                const amountCell = document.createElement('td');
                if (transaction.amount > 0) {
                    amountCell.textContent = '+' + transaction.amount.toFixed(2) + ' PKR';
                    amountCell.style.color = 'green';
                } else if (transaction.amount < 0) {
                    amountCell.textContent = transaction.amount.toFixed(2) + ' PKR';
                    amountCell.style.color = 'red';
                } else {
                    amountCell.textContent = '0.00 PKR';
                }
                
                const statusCell = document.createElement('td');
                statusCell.textContent = transaction.status || 'completed';
                statusCell.style.color = transaction.status === 'pending' ? 'orange' : 'green';
                
                row.appendChild(dateCell);
                row.appendChild(typeCell);
                row.appendChild(descCell);
                row.appendChild(amountCell);
                row.appendChild(statusCell);
                transactionHistoryTbody.appendChild(row);
            });
        }

        function addTransaction(description, amount, newBalance, status = 'completed') {
            const transaction = {
                id: Date.now(),
                userId: currentUser.id,
                date: new Date().toISOString(),
                description,
                amount,
                balance: newBalance,
                status
            };
            transactions.push(transaction);
            localStorage.setItem('transactions', JSON.stringify(transactions));
            balance = newBalance;
            currentUser.balance = balance;
            updateUserData();
            updateBalance();
            updateTransactionHistory();
        }

        function updateUserData() {
            const userIndex = users.findIndex(u => u.id === currentUser.id);
            if(userIndex !== -1) {
                users[userIndex] = currentUser;
                localStorage.setItem('users', JSON.stringify(users));
            }
        }

        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            bankingApp.style.display = 'none';
            authPages.style.display = 'flex';
            showAuthPage('loginPage');
            document.getElementById('loginEmail').value = '';
            document.getElementById('loginPassword').value = '';
        }
    </script>
</body>
</html>